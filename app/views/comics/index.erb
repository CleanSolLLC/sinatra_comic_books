<%if is_logged_in? %>

	<h2>Welcome <%= current_user.username%>!</h2>

	<%if @comics == [] %>
		<h3>You have no comics listed</h3>  
		<a href = "/comic/new">Please Enter New Comic</a>
	<%else%>
		<h2> Here is a list of your comics!</h2>
		<h4>Select a comic to view more details</h4>
		<p><h4><a href="/comic/new">Add new comic</a></p></h4></p>
		<p><h4><a href="/logout">Log out</a></p></h4></p>
		
		<% @comics.each do |comic| %>
	    	<ul>
	    		<li><a href = "/comic/<%= comic.id %>"><%= comic.title %> - 
	    		<%= comic.subtitle %> - <%= comic.publisher %> - <%= comic.year %>	
	    		</a></li>  	         	
	    	</ul> 
	    <%end%>
	
	<%end%> 

<%else%>
	<a href="/sessions/login">Please Log In</a>
<%end%>




	        